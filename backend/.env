# ============================================================
# LoopyMart - Environment Variables
# ============================================================
# Copy this file to .env and fill in all required values.
# IMPORTANT: Never commit .env to version control!
# ============================================================

# ------------------------------------------------------------
# REQUIRED SETTINGS (Application will not start without these)
# ------------------------------------------------------------

# MariaDB Database (for user authentication only)
# Format: mysql+aiomysql://username:password@host:port/database
DATABASE_URL=mysql+aiomysql://root:password@localhost:3306/loopymart_users

# MongoDB (for products, categories, cart, orders)
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=loopymart

# JWT Secret Key (REQUIRED - generate a strong random key)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=PywFyk_NAiUqrdzBIKN-gRwmWHog7hewhZ7PylvtTYBigOJWHFm3vhPlW9Zs9MxsiSyvbYcReQ6Wg7oIzHbJ-A

# ------------------------------------------------------------
# OPTIONAL SETTINGS (have sensible defaults)
# ------------------------------------------------------------

# Application
APP_NAME=LoopyMart
DEBUG=false

# JWT Settings
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# CORS Origins (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Static files directories (relative to backend folder)
STATIC_DIR=static
UPLOADS_DIR=static/uploads

# API Limits
API_PRODUCTS_DEFAULT_LIMIT=50
API_PRODUCTS_MAX_LIMIT=100

# Payment Settings
MIN_PAYMENT_AMOUNT_PAISE=100

# ------------------------------------------------------------
# ADMIN SEED CREDENTIALS (for initial setup)
# ------------------------------------------------------------
# These are used to create the first admin user on startup.
# Leave empty to skip admin seeding.

ADMIN_EMAIL=admin@something.com
ADMIN_PASSWORD=admin123
ADMIN_NAME=Admin

# ------------------------------------------------------------
# PAYMENT GATEWAY (Razorpay - Optional)
# ------------------------------------------------------------
# Get keys from https://dashboard.razorpay.com/
# If not set, checkout uses "Place Order" without online payment.

RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
